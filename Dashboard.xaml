<Window x:Class="SimpleLoginWPF.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLoginWPF"
        mc:Ignorable="d"
        Title="ALF Pharmaceuticals" 
        Height="800" Width="1200"
        Background="#f5f5f7"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- ~~~~~~~ COLOR PALETTE ~~~~~~~~~ -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <Color x:Key="PrimaryRed">#B30000</Color>
        <Color x:Key="PrimaryRedDark">#8A0000</Color>
        <Color x:Key="PrimaryRedLight">#FFD9D9</Color>
        <Color x:Key="AccentGold">#FFD700</Color>

        <!-- Convert Colors to Brushes -->
        <SolidColorBrush x:Key="PrimaryRedBrush" Color="{StaticResource PrimaryRed}"/>
        <SolidColorBrush x:Key="PrimaryRedDarkBrush" Color="{StaticResource PrimaryRedDark}"/>
        <SolidColorBrush x:Key="PrimaryRedLightBrush" Color="{StaticResource PrimaryRedLight}"/>
        <SolidColorBrush x:Key="AccentGoldBrush" Color="{StaticResource AccentGold}"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f5f5f7"/>
                                <Setter Property="Foreground" Value="#333"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f5f5f7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Stats Box Style -->
        <Style x:Key="StatsBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="InventoryDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F8F8"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#e0e0e0"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#e0e0e0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f5f5f7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddMoreButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource PrimaryRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16"
                      Opacity="0.3"
                      Color="{StaticResource PrimaryRed}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="20">
                            <Grid>
                                <Ellipse x:Name="HoverOverlay"
                         Fill="White"
                         Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay"
                        Property="Opacity"
                        Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
        Background="{TemplateBinding Background}"
        CornerRadius="0,8,8,0"
        Padding="8,0"
        SnapsToDevicePixels="True">
                            <DockPanel VerticalAlignment="Center">
                                <!-- Fix: Properly display image -->
                                <Image Source="{TemplateBinding Tag}"
               Width="24" Height="24"
               Margin="10,0,5,0"
               VerticalAlignment="Center"
               Visibility="Visible"/>
                                <!-- Fix: Use ContentPresenter to ensure text shows up -->
                                <ContentPresenter VerticalAlignment="Center"
                          Margin="5,0,0,0"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover state -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <!-- Pressed state -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Subtle drop shadow -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#FFD9D9"/>
            <Setter Property="Foreground" Value="#B30000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#B30000" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- ~~~~~~~~ DATA GRID ~~~~~~~~~~~~ -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <Style x:Key="DataGridMain" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                      Opacity="0.1"
                      ShadowDepth="3"
                      Direction="270"/>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryRedBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="42"/>
                        <Setter Property="SeparatorVisibility" Value="Collapsed"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryRedLightBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12"
                                          Color="{StaticResource PrimaryRed}"
                                          Opacity="0.1"
                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryRedLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryRedBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#e0e0e0" 
                BorderThickness="0,0,1,0"
                x:Name="NavigationPanel">
            <StackPanel>
                <Image Source="/Assets/aliflogo-removebg-preview.png"
               Width="140" Height="100" Margin="20,30"/>

                <!-- Navigation Buttons -->
                <Button Style="{StaticResource SelectedSidebarButtonStyle}" Click="Dashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Home.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Inventory_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Inventory.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Inventory"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Reports_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Report.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Reports"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Partners_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Suppliers.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Partners"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Orders_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Order.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Orders"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageStore_Click">
                        <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Manage Store.png"
                            Width="22"
                            Height="22"
                            Margin="5,0,15,0"/>
                        <TextBlock Text="Distributors"
                            VerticalAlignment="Center"/>
                        </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="AdminDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Suppliers.png"
                            Width="22"
                            Height="22"
                            Margin="5,0,15,0"/>
                        <TextBlock Text="Admin Page"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
            Click="Logout_Click"
            Margin="0,40,0,0"
            Foreground="{StaticResource PrimaryRedBrush}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Logout.png"
                    Width="22"
                    Height="22"
                    Margin="5,0,15,0"/>
                        <TextBlock Text="Logout" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Other buttons and logout -->
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Search and Profile Section -->
            <Grid Grid.Row="0" Height="60" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="5" 
                        BorderThickness="1" 
                        BorderBrush="#e0e0e0" 
                        Margin="0,0,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="1" 
                                 Style="{StaticResource SearchBoxStyle}"
                                 Text="Search product, supplier, order"
                                 KeyDown="SearchBox_KeyDown"
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"
                                 x:Name="SearchBox"/>
                    </Grid>
                </Border>

                <!-- Profile Section -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource AddMoreButton}"
                        Content="👤"
                        Margin="10,0"
                        Click="Profile_Click" Background="#FFB30000"/>
                </StackPanel>
            </Grid>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Row: Stats -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales Overview Section -->
                        <Border Grid.Column="0" Style="{StaticResource StatsBoxStyle}" Margin="0,0,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Sales Overview" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                <!-- Sales Overview Content -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Sales -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border Background="#e3f2fd" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Report.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="Rs 832" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Sales" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Revenue -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border Background="#e8eaf6" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Order.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="Rs 18,300" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Revenue" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Profit -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <Border Background="#fff8e1" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Manage Store.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="Rs 868" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Profit" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Cost -->
                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <Border Background="#d3e3dd" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Order.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="Rs 17,432" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Cost" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Inventory Summary -->
                        <Border Grid.Column="1" Style="{StaticResource StatsBoxStyle}" Margin="10,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Inventory Summary" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,20"/>

                                <!-- Inventory Metrics -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Quantity in Hand -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border Background="#fff8e1" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Manage Store.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="868" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Quantity in Hand" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- To be received -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border Background="#e8eaf6" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Report.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="200" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="To be received" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Second Row: Purchase Overview and Product Summary -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Purchase Overview Card -->
                        <Border Grid.Column="0" Style="{StaticResource StatsBoxStyle}" Margin="0,0,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Purchase Overview" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                <!-- Purchase Overview Content -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Purchase -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border Background="#e3f2fd" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Manage Store.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="82" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Purchase" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Cost -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border Background="#d3e3dd" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Report.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="₹ 13,573" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Cost" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Cancel -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <Border Background="#e8eaf6" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Order.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="5" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Cancel" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Return -->
                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <Border Background="#fff8e1" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Logout.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="₹ 1,142" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Return" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Product Summary -->
                        <Border Grid.Column="1" Style="{StaticResource StatsBoxStyle}" Margin="10,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Product Summary" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,20"/>

                                <!-- Product Metrics -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Number of Suppliers -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border Background="#e3f2fd" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Suppliers.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="31" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Number of Distributors" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Number of Categories -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border Background="#e8eaf6" CornerRadius="5" Width="50" Height="50" HorizontalAlignment="Center">
                                            <Image Source="/Assets/Order.png" Width="24" Height="24"/>
                                        </Border>
                                        <TextBlock Text="21" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                        <TextBlock Text="Number of Categories" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Third Row: Sales & Purchase Chart and Order Summary -->
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales & Purchase Chart -->
                        <Border Grid.Column="0" Style="{StaticResource StatsBoxStyle}" Margin="0,0,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Sales &amp; Purchase" FontSize="18" FontWeight="SemiBold"/>

                                    <Border Grid.Column="1" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="4" Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Weekly" FontSize="12" Foreground="#757575" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Chart Area -->
                                <Grid Grid.Row="1" Margin="0,20,0,10">
                                    <!-- Y-axis labels -->
                                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,0,10,0">
                                        <TextBlock Text="60,000" FontSize="10" Foreground="#757575" Margin="0,0,0,45"/>
                                        <TextBlock Text="50,000" FontSize="10" Foreground="#757575" Margin="0,0,0,45"/>
                                        <TextBlock Text="40,000" FontSize="10" Foreground="#757575" Margin="0,0,0,45"/>
                                        <TextBlock Text="30,000" FontSize="10" Foreground="#757575" Margin="0,0,0,45"/>
                                        <TextBlock Text="20,000" FontSize="10" Foreground="#757575" Margin="0,0,0,45"/>
                                        <TextBlock Text="10,000" FontSize="10" Foreground="#757575"/>
                                    </StackPanel>

                                    <!-- Horizontal grid lines -->
                                    <Grid Margin="40,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                        <Border Grid.Row="4" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                        <Border Grid.Row="5" BorderThickness="0,1,0,0" BorderBrush="#EEEEEE" VerticalAlignment="Top"/>
                                    </Grid>

                                    <!-- Bars -->
                                    <Canvas Margin="40,0,0,30">
                                        <!-- January -->
                                        <Rectangle Canvas.Left="15" Canvas.Bottom="0" Width="15" Height="200" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="35" Canvas.Bottom="0" Width="15" Height="180" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- February -->
                                        <Rectangle Canvas.Left="75" Canvas.Bottom="0" Width="15" Height="230" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="95" Canvas.Bottom="0" Width="15" Height="180" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- March -->
                                        <Rectangle Canvas.Left="135" Canvas.Bottom="0" Width="15" Height="160" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="155" Canvas.Bottom="0" Width="15" Height="200" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- April -->
                                        <Rectangle Canvas.Left="195" Canvas.Bottom="0" Width="15" Height="140" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="215" Canvas.Bottom="0" Width="15" Height="160" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- May -->
                                        <Rectangle Canvas.Left="255" Canvas.Bottom="0" Width="15" Height="160" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="275" Canvas.Bottom="0" Width="15" Height="180" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- June -->
                                        <Rectangle Canvas.Left="315" Canvas.Bottom="0" Width="15" Height="110" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="335" Canvas.Bottom="0" Width="15" Height="150" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- July -->
                                        <Rectangle Canvas.Left="375" Canvas.Bottom="0" Width="15" Height="210" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="395" Canvas.Bottom="0" Width="15" Height="180" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>

                                        <!-- August -->
                                        <Rectangle Canvas.Left="435" Canvas.Bottom="0" Width="15" Height="160" Fill="#64B5F6" RadiusX="2" RadiusY="2"/>
                                        <Rectangle Canvas.Left="455" Canvas.Bottom="0" Width="15" Height="150" Fill="#66BB6A" RadiusX="2" RadiusY="2"/>
                                    </Canvas>
                                </Grid>

                                <!-- X-axis and Legend -->
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- X-axis labels -->
                                    <UniformGrid Grid.Row="0" Columns="8" HorizontalAlignment="Stretch" Margin="40,0,0,0">
                                        <TextBlock Text="Jan" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Feb" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Mar" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Apr" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="May" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Jun" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Jul" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Aug" FontSize="10" Foreground="#757575" HorizontalAlignment="Center"/>
                                    </UniformGrid>

                                    <!-- Legend -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                            <Ellipse Width="8" Height="8" Fill="#64B5F6" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Purchase" FontSize="10" Foreground="#757575" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Fill="#66BB6A" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Sales" FontSize="10" Foreground="#757575" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Order Summary -->
                        <Border Grid.Column="1" Style="{StaticResource StatsBoxStyle}" Margin="10,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Order Summary" FontSize="16" FontWeight="SemiBold" Margin="15,15,15,5"/>

                                <!-- Chart Area -->
                                <Grid Grid.Row="1" Margin="15,5,15,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Y-Axis Labels -->
                                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,0,5,0">
                                        <TextBlock Text="4000" FontSize="10" Foreground="#888888" VerticalAlignment="Top"/>
                                        <TextBlock Text="3000" FontSize="10" Foreground="#888888" VerticalAlignment="Top" Margin="0,40,0,0"/>
                                        <TextBlock Text="2000" FontSize="10" Foreground="#888888" VerticalAlignment="Top" Margin="0,40,0,0"/>
                                        <TextBlock Text="1000" FontSize="10" Foreground="#888888" VerticalAlignment="Top" Margin="0,40,0,0"/>
                                        <TextBlock Text="0" FontSize="10" Foreground="#888888" VerticalAlignment="Top" Margin="0,40,0,0"/>
                                    </StackPanel>

                                    <!-- Chart Canvas -->
                                    <Canvas x:Name="ChartCanvas" Margin="20,0,0,0">
                                        <!-- Grid Lines -->
                                        <Line X1="0" Y1="0" X2="270" Y2="0" Stroke="#EEEEEE" StrokeThickness="1"/>
                                        <Line X1="0" Y1="40" X2="270" Y2="40" Stroke="#EEEEEE" StrokeThickness="1"/>
                                        <Line X1="0" Y1="80" X2="270" Y2="80" Stroke="#EEEEEE" StrokeThickness="1"/>
                                        <Line X1="0" Y1="120" X2="270" Y2="120" Stroke="#EEEEEE" StrokeThickness="1"/>
                                        <Line X1="0" Y1="160" X2="270" Y2="160" Stroke="#EEEEEE" StrokeThickness="1"/>

                                        <!-- Lines and fills will be added programmatically -->
                                    </Canvas>

                                    <!-- X-Axis Labels -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="25,5,0,0">
                                        <TextBlock Text="Jan" FontSize="10" Foreground="#888888" Width="54" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Feb" FontSize="10" Foreground="#888888" Width="54" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Mar" FontSize="10" Foreground="#888888" Width="54" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Apr" FontSize="10" Foreground="#888888" Width="54" HorizontalAlignment="Center"/>
                                        <TextBlock Text="May" FontSize="10" Foreground="#888888" Width="54" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Legend -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                                        <Ellipse Fill="#DE9A4F" Width="8" Height="8" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Ordered" FontSize="10" Foreground="#888888" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                        <Ellipse Fill="#3F87E5" Width="8" Height="8" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Delivered" FontSize="10" Foreground="#888888" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <!-- Fourth Row: Inventory Data Grid -->
                    <Border Grid.Row="3" Style="{StaticResource StatsBoxStyle}" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header and Action Buttons -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Recent Inventory" FontSize="18" FontWeight="SemiBold"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Style="{StaticResource IconButtonStyle}" Click="Export_Click" ToolTip="Export">
                                        <Image Source="/Assets/Report.png" Width="20" Height="20"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}" Click="Print_Click" ToolTip="Print" Margin="10,0,0,0">
                                        <Image Source="/Assets/Logout.png" Width="20" Height="20"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}" Click="AddItem_Click" ToolTip="Add New Item" Margin="10,0,0,0">
                                        <Image Source="/Assets/Manage Store.png" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Data Grid -->
                            <DataGrid Grid.Row="1" 
                                      Style="{StaticResource DataGridMain}"
                                      x:Name="InventoryDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="1*"/>
                                    <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="2*"/>
                                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="1.5*"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="0.8*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:C}}" Width="1*"/>
                                    <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier}" Width="1.5*"/>
                                    <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated, StringFormat={}{0:d}}" Width="1.2*"/>
                                    <DataGridTemplateColumn Header="Actions" Width="1*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource IconButtonStyle}" Click="EditItem_Click" Tag="{Binding ProductId}" ToolTip="Edit">
                                                        <Image Source="/Assets/Manage Store.png" Width="16" Height="16"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButtonStyle}" Click="DeleteItem_Click" Tag="{Binding ProductId}" ToolTip="Delete" Margin="5,0,0,0">
                                                        <Image Source="/Assets/Logout.png" Width="16" Height="16"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
