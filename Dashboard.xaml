<Window x:Class="SimpleLoginWPF.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:SimpleLoginWPF"
        mc:Ignorable="d"
        Title="ALF Pharmaceuticals" 
        Height="800" Width="1200"
        Background="#f5f5f7"
        FontFamily="Segoe UI"
        WindowState="Maximized"
        WindowStyle="None">

    <Window.Resources>
        <Color x:Key="PrimaryRed">#B30000</Color>
        <Color x:Key="PrimaryRedDark">#8A0000</Color>
        <Color x:Key="PrimaryRedLight">#FFD9D9</Color>
        <Color x:Key="AccentGold">#FFD700</Color>

        <SolidColorBrush x:Key="PrimaryRedBrush" Color="{StaticResource PrimaryRed}"/>
        <SolidColorBrush x:Key="PrimaryRedDarkBrush" Color="{StaticResource PrimaryRedDark}"/>
        <SolidColorBrush x:Key="PrimaryRedLightBrush" Color="{StaticResource PrimaryRedLight}"/>
        <SolidColorBrush x:Key="AccentGoldBrush" Color="{StaticResource AccentGold}"/>

        <Style x:Key="GlassPanel" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#F5F5F7" Offset="0"/>
                        <GradientStop Color="#F5F5F7" Offset="0.5"/>
                        <GradientStop Color="#F5F5F7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" 
                                      ShadowDepth="0" 
                                      Color="#40000000" 
                                      Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                      ShadowDepth="0" 
                                      Color="#20000000" 
                                      Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                   Opacity="0.1"
                   ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Tile Style -->
        <Style x:Key="StatTile" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" 
                                      ShadowDepth="0" 
                                      Color="#10000000" 
                                      Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Container -->
        <Style x:Key="IconContainer" TargetType="Border">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#F5F5F7"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>

        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f5f5f7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stats Box Style -->
        <Style x:Key="StatsBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="AddMoreButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource PrimaryRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16"
                      Opacity="0.3"
                      Color="{StaticResource PrimaryRed}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                CornerRadius="20">
                            <Grid>
                                <Ellipse x:Name="HoverOverlay"
                         Fill="White"
                         Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay"
                        Property="Opacity"
                        Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
        Background="{TemplateBinding Background}"
        CornerRadius="0,8,8,0"
        Padding="8,0"
        SnapsToDevicePixels="True">
                            <DockPanel VerticalAlignment="Center">
                                <Image Source="{TemplateBinding Tag}"
               Width="24" Height="24"
               Margin="10,0,5,0"
               VerticalAlignment="Center"
               Visibility="Visible"/>
                                
                                <ContentPresenter VerticalAlignment="Center"
                          Margin="5,0,0,0"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                          
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
           
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#FFD9D9"/>
            <Setter Property="Foreground" Value="#B30000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#B30000" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridMain" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                      Opacity="0.1"
                      ShadowDepth="3"
                      Direction="270"/>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryRedBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="42"/>
                        <Setter Property="SeparatorVisibility" Value="Collapsed"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryRedLightBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12"
                                          Color="{StaticResource PrimaryRed}"
                                          Opacity="0.1"
                                          ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryRedLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryRedBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#a60000"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Stat Value Style -->
        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#cb2424"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#e0e0e0" 
                BorderThickness="0,0,1,0"
                x:Name="NavigationPanel">
            <StackPanel>
                <Image Source="/Assets/aliflogo-removebg-preview.png"
               Width="140" Height="100" Margin="20,30"/>

                <!-- Navigation Buttons -->
                <Button x:Name="DashboardButton" Style="{StaticResource SelectedSidebarButtonStyle}" Click="Dashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Home.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Button x:Name="InventoryButton" Style="{StaticResource SidebarButtonStyle}" Click="Inventory_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Inventory.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Inventory"/>
                    </StackPanel>
                </Button>

                <Button x:Name="ReportsButton" Style="{StaticResource SidebarButtonStyle}" Click="Reports_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Report.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Reports"/>
                    </StackPanel>
                </Button>

                <Button x:Name="PartnersButton" Style="{StaticResource SidebarButtonStyle}" Click="Partners_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Suppliers.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Partners"/>
                    </StackPanel>
                </Button>

                <Button x:Name="OrdersButton" Style="{StaticResource SidebarButtonStyle}" Click="Orders_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Order.png" Width="22" Height="22" Margin="5,0,15,0"/>
                        <TextBlock Text="Orders"/>
                    </StackPanel>
                </Button>

                <Button x:Name="DistributorsButton" Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageStore_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Manage Store.png"
                            Width="22"
                            Height="22"
                            Margin="5,0,15,0"/>
                        <TextBlock Text="Distributors"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="PurchasesButton" Style="{StaticResource SidebarButtonStyle}"
                    Click="Purchase_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Inventory.png"
            Width="22"
            Height="22"
            Margin="5,0,15,0"/>
                        <TextBlock Text="Purchases"
            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="AdminButton" Style="{StaticResource SidebarButtonStyle}"
                        Click="AdminDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Suppliers.png"
                            Width="22"
                            Height="22"
                            Margin="5,0,15,0"/>
                        <TextBlock Text="Admin Page"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
            Click="Logout_Click"
            Margin="0,40,0,0"
            Foreground="{StaticResource PrimaryRedBrush}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Logout.png"
                    Width="22"
                    Height="22"
                    Margin="5,0,15,0"/>
                        <TextBlock Text="Logout" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

           
            <Grid Grid.Row="0" Height="60" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource AddMoreButton}"
                        Content="↻"
                        Margin="10,0"
                        Click="Refresh_Click" Background="#FFB30000"/>
                    <Button Style="{StaticResource AddMoreButton}"
                        Content="👤"
                        Margin="10,0"
                        Click="Profile_Click" Background="#FFB30000"/>
                </StackPanel>
            </Grid>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Sales Overview" Style="{StaticResource TitleStyle}"/>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Report.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Sales}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Sales" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Order.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Revenue}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Revenue" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Manage Store.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Profit}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Profit" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Order.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Cost}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Cost" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Inventory Summary -->
                                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Inventory Summary" Style="{StaticResource TitleStyle}"/>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Manage Store.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding QuantityInHand}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Quantity in Hand" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Report.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding ToBeReceived}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="To be received" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            
                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Purchase Overview" Style="{StaticResource TitleStyle}"/>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Manage Store.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Purchase}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Purchase" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Report.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding PurchaseCost}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Cost" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Order.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Cancel}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Cancel" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Logout.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding Return}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Return" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Product Summary -->
                                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Product Summary" Style="{StaticResource TitleStyle}"/>

                                        
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Suppliers.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding NumberOfDistributors}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Number of Distributors" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Border Style="{StaticResource IconContainer}">
                                                    <Image Source="/Assets/Order.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border>
                                                <TextBlock Text="{Binding NumberOfCategories}" Style="{StaticResource StatValueStyle}"/>
                                                <TextBlock Text="Number of Categories" Style="{StaticResource StatLabelStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Sales Chart" Style="{StaticResource TitleStyle}"/>

                                            <Border Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#E0E0E0"
                                        CornerRadius="8"
                                        Padding="8,6"
                                        Background="White"/>
                                        </Grid>

                                        <!-- Chart Area -->
                                        <Grid Grid.Row="1" Margin="0,20,0,10">
                                            <lvc:CartesianChart 
                                                x:Name="SalesChart"
                                                Series="{Binding ChartSeries}"
                                                AxisX="{Binding XAxes}"
                                                AxisY="{Binding YAxes}"
                                                LegendLocation="Right"
                                                Height="300" Margin="10"></lvc:CartesianChart>
                                        </Grid>

                                        <Grid Grid.Row="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                                    <Border Width="12" Height="12" CornerRadius="6" Background="#64B5F6" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Purchase" FontSize="10" Foreground="#757575" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="12" Height="12" CornerRadius="6" Background="#66BB6A" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Sales" FontSize="10" Foreground="#757575" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Order Summary -->
                                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Order Chart" Style="{StaticResource TitleStyle}"/>

                                        <Grid Grid.Row="1" Margin="15,5,15,15">
                                            <lvc:CartesianChart 
                                                x:Name="OrderChart"
                                                Series="{Binding OrderChartSeries}"
                                                AxisX="{Binding OrderXAxes}"
                                                AxisY="{Binding OrderYAxes}"
                                                LegendLocation="Right"
                                                Height="300" Margin="10"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Recent Inventory" Style="{StaticResource TitleStyle}"/>
                                    </Grid>

                                    <DataGrid Grid.Row="1"
                                  Style="{StaticResource DataGridMain}"
                                  x:Name="InventoryDataGrid"
                                  AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="1*"/>
                                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="2*"/>
                                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="0.8*"/>
                                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='Rs. {0:#,##0.00}'}" Width="1*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>