<Window x:Class="SimpleLoginWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLoginWPF"
        mc:Ignorable="d"
        Title="Login" Height="720" Width="1280"
        FontFamily="Georgia" 
        WindowState="Maximized">
    
    <Grid>
        <!-- Define column and row definitions for responsive layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Logo on the left side -->
        <Image Grid.Column="1" Grid.Row="1" Grid.RowSpan="5"
           Source="pack://application:,,,/SimpleLoginWPF;component/Assets/MAINLogo.png" 
           Width="280" Height="280"
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="20,0,80,0" />

        <!-- Right side content -->
        <StackPanel Grid.Column="2" Grid.Row="3" 
                VerticalAlignment="Center"
                Margin="0,0,10,0">

            <!-- Company logo on the right side -->
            <Image Source="pack://application:,,,/SimpleLoginWPF;component/Assets/aliflogo-removebg-preview.png" 
               Width="120" Height="100"
               HorizontalAlignment="Center" 
               Margin="0,0,0,20" />

            <!-- Header text -->
            <TextBlock Text="Login to your account" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0" />

            <TextBlock Text="Welcome back! Please enter your details."
                       FontSize="15"
                       FontWeight="UltraLight"
                       Opacity="0.5"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <!-- Name field -->
            <TextBlock Text="Name*"
                   FontSize="16" 
                   FontStyle="Italic"
                   Opacity="0.5"
                   Margin="0,0,0,5" />

            <TextBox x:Name="UsernameTextBox" 
                     Text="Username" 
                     GotFocus="UsernameTextBox_GotFocus" 
                     LostFocus="UsernameTextBox_LostFocus" 
                     Height="30"
                     VerticalAlignment="Center"
                     FontSize="15"
                     BorderThickness="1"
                     BorderBrush="LightGray"
                     Padding="5"
                     Background="White"
                     Margin="0,0,0,20">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="5">
                                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Password field -->
            <TextBlock Text="Password*" 
                   FontSize="16" 
                   FontStyle="Italic" 
                   Opacity="0.5"
                   Margin="0,0,0,5" />

            <PasswordBox x:Name="PasswordBox"  
                        Height="30"  
                        GotFocus="PasswordBox_GotFocus"  
                        LostFocus="PasswordBox_LostFocus"  
                        FontSize="15"  
                        Margin="0,0,0,30"  
                        BorderThickness="1"  
                        BorderBrush="LightGray"  
                        Padding="5"  
                        Background="White">  
               <PasswordBox.Style>  
                   <Style TargetType="PasswordBox">  
                       <Setter Property="Template">  
                           <Setter.Value>  
                               <ControlTemplate TargetType="PasswordBox">  
                                   <Border Background="{TemplateBinding Background}"  
                                           BorderBrush="{TemplateBinding BorderBrush}"  
                                           BorderThickness="{TemplateBinding BorderThickness}"  
                                           CornerRadius="5">  
                                       <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>  
                                   </Border>  
                               </ControlTemplate>  
                           </Setter.Value>  
                       </Setter>  
                   </Style>  
               </PasswordBox.Style>  
            </PasswordBox>

            <!-- Register button -->
            <Button x:Name="LoginButton" 
                Background="DarkRed" 
                Foreground="White" 
                Content="Login" 
                Click="LoginButton_Click"
                Height="40" 
                FontSize="16" 
                FontWeight="Bold"
                VerticalAlignment="Center"
                Margin="0,0,0,20">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="DarkRed"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B22222"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
